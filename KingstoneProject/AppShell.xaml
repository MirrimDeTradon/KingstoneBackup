<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="KingstoneProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:KingstoneProject"
    Shell.FlyoutBehavior="Disabled">
    <TabBar x:Name="tabbar">
        <ShellContent Title="Sheets" Route="sheets" Icon="sheetspagefavicon.png" ContentTemplate="{DataTemplate local:SheetsPage}"/>
        <ShellContent Title="Character" Route="character" Icon="characterpagefavicon.png" ContentTemplate="{DataTemplate local:CharacterPage}"/>
        <ShellContent Title="Stats" Route="stats" Icon="statspagefavicon.png" ContentTemplate="{DataTemplate local:StatsPage}"/>
        <ShellContent Title="Marks" Route="marks" Icon="markspagefavicon.png" ContentTemplate="{DataTemplate local:MarksPage}"/>
        <ShellContent Title="Upgrades" Route="upgrades" Icon="upgradespagefavicon.png" ContentTemplate="{DataTemplate local:UpgradesPage}"/>
    </TabBar>

</Shell>
